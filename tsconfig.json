{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "jsx": "preserve",
        "incremental": true
    },
    "include": [
        "src/**/*", "example/example.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}

